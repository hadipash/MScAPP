<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admission.MainAdmission">


    <com.google.android.material.appbar.AppBarLayout
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs_admit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/requirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requirement" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/procedures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Procedures" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fee" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/studentwords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Words" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/info_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sessions" />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQ" />

        </com.google.android.material.tabs.TabLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/container_admit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>